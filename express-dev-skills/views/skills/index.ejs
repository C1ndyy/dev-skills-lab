<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Import Google Icon Font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--my stylesheet-->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <title>Skills</title>
</head>
<body>
  <h1>Skills</h1>
  <div id="add-new-skill">
    <a href="/skills/new" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
    <h5>Add New Skill</h5>
  </div>  
  <div id="skills-container">
    <% skills.forEach(function(s) { %>
      <div class="row"> 
        <div class="col s12 m4">
          <div class="card horizontal complete-<%= s.complete %>">
            <div class="card-stacked">
              <div class="card-content">
                <h5><%= s.skill %></h5>
              </div>
              <div class="card-action ">
                <a href="/skills/<%= s.id %>" class="white-text">Details</a>
                <form action="/skills/<%= s.id %>?_method=DELETE" method="POST">
                  <button type="submit">DELETE</button>
                </form>
              </div>
            </div>
          </div>  
        </div>
      </div>
    <% }); %>        
  </div>
</body>
</html>